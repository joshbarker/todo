<h1><%= @user.name %></h1>
 <h2><%= @user.email %></h2>
 <p><%= render 'items/form' %></p> 
 <h3><%= @items.count %> Things to get done in the next <mark><em>7 days...</em></mark> </h3>
 <p><%= render @items %></p>

<div class="container main-page">
  <div class="row">
     <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">

      <hr>

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title">My Items</h3>
          
          <div class="pull-left">
           <!--  <button class="btn btn-warning btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button> -->
          </div>
          <div class="pull-left">
            <%= link_to 'Add New Item', new_user_item_path(@user.id), class:'btn btn-warning ' %>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table id="Task-table" class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Days Left</th>
              <th>Done</th>
            </tr>
          </thead>

          <tbody>
            <% @items.each do |item| %>
              <tr id=<%= "task-#{item.id}" %>>
                <td><%= item.name %></td>
                <td><%= item.days_left %></td>
                <td><%= link_to("", item , method: :delete, remote: true, class: 'glyphicon glyphicon-ok', id: "#{item.id}-complete") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <br>


     </div>
  </div>
</div>